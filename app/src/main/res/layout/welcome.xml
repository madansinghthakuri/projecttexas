<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ironman.splash.Splash"

    android:id="@+id/drawerlayout">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <include
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           layout="@layout/toolbar"/>

   </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navigationhadder"

        ></android.support.design.widget.NavigationView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="142dp"
            android:text="ABOUT US"
            android:textSize="12dp"
            android:background="@drawable/aboutusbtn"
            android:id="@+id/aboutbtn"

            />

        <Button
            android:id="@+id/mfromp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"


            android:layout_above="@+id/aboutbtn"
            android:layout_alignLeft="@+id/aboutbtn"
            android:layout_alignStart="@+id/aboutbtn"
            android:layout_marginBottom="25dp"
            android:background="@drawable/aboutusbtn"
            android:text="Message from Principle"
            android:textSize="12dp"
            />


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>